<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:animationCache="false"
    android:background="@drawable/animation"
    android:fadingEdge="vertical"
    android:padding="0dp"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="283dp"
        android:layout_height="126dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="68dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="296dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/kaushan_script"
        android:text="Voice Notes"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#cf2323"
        android:textIsSelectable="true"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="47dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="268dp"
        android:fontFamily="@font/rye"
        android:text="write whatever you speak "
        android:textColor="#AA0202"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/signature"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-7dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/rouge_script"
        android:text="Developed  By                                        Arun Kumar"
        android:textColor="#9F0216B8"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="110dp"
        android:layout_height="111dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="120dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="422dp"
        app:srcCompat="@drawable/ic_mic_none_black_24dp" />

    />
</RelativeLayout>